<% layout('/layouts/boilerplate') -%>
<body>
    <br><br>
    <h3>All Titles</h3>
    <div class="row  ">
    <%for (let listing of allListning){ %>
    
        <div class="card listing-card designing-card col-lg-3 col-md-3 col-sm-1" style="width: 20rem;">
            <a href="/listings/<%= listing._id %>">
            <img src="<%=listing.image.url%>" class="card-img-top" alt=".." style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text"><b><%=listing.title%></b><br>
                &#8377; <%=listing.price.toLocaleString('en-in')%></p>
            </div>
        </a>
        </div>
    
    <%}%>
    </div>

</body>
